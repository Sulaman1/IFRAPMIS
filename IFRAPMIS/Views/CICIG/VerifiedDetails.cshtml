    </div>
</div>


<div class="mapouter"><div class="gmap_canvas"><iframe width="100%" height="100%" frameborder="0" style="border:0" src="@String.Concat("https://www.google.com/maps/embed/v1/place?q=",@Model.Lat,",",@Model.Long,"&key=AIzaSyAq8CjILSiYD9C8h6B8lnZG4drnJVx0kpY&zoom=10")"></iframe></div></div>
@section Scripts {    
      <!-- toastr plugin -->
    <script src="~/assets/libs/toastr/build/toastr.min.js"></script>
    <!-- Sweet Alerts js -->
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script type="text/javascript">
$(document).ready(function() {
    $.get('@Url.Action("_Index","CICIGMembers", new { id=Model.CICIGId })', function(content) {
        $("#dynamicContentContainer").html(content);
        notificationme('Fetch Record Successfully!');
        /* $("#divLoading").hide();*/
    });
});

function submitprofile(id) {
            Swal.fire({
                title: "Are you sure?",
                text: 'You Want to Submit CI/CIG for Review',
                type: "success",
                showCancelButton: !0, 
                confirmButtonColor: "#34c38f",
                cancelButtonColor: "#f46a6a",
                confirmButtonText: "Yes, Submit it!"
            }).then(function (t) {
                if (t.value == true) {
                    $.ajax({
                        type: "POST",
                        url: "/CICIG/CISubmitForApprovalRequest",
                        data: { id: id, val: 1, description: "desc" },
                        dataType: "json",
                        success: function (response) {
                            if (response != null) {
                                if (response.isValid) {
                                    Swal.fire("Approval", response.message, "success");
                                    $('#btnverifyprofile').prop('disabled', true);
                                    $('#btnrejectprofile').prop('disabled', true);                                                                   
                                } else {
                                    notificationme(response.message);
                                }
                            }
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                }
            })
        }
function rejectprofile(Id) {
            var Description = "";
            Swal.fire({
                title: "Are you sure?",
                html: "<h6>You Want to Reject CI/CIG?</h6><div class='text-center'><label>Description</label><div class='text-center'><textarea id='description' class='form-control' rows='2'></textarea></div>",
                type: "warning",
                showCancelButton: !0, confirmButtonColor: "#34c38f",
                cancelButtonColor: "#f46a6a",
                confirmButtonText: "Yes, Reject it!",
                preConfirm: () => {
                    Description = document.getElementById('description').value;
                    if (Description == "") {
                        Swal.showValidationMessage(
                            `Invalid Reason!`
                        )
                    }
                }
            }).then(function (t) {
                if (t.value == true) {
                    $.ajax({
                        type: "POST",
                        url: "/CICIG/CIRejectdRequest",
                        data: { id: Id, val: 0, description: Description },
                        dataType: "json",
                        success: function (response) {
                            if (response != null) {
                                if (response.isValid) {
                                    Swal.fire("Rejected", response.message, "success");
                                    $('#btnverifyprofile').prop('disabled', true);
                                    $('#btnrejectprofile').prop('disabled', true);                                                                      
                                } else {
                                    notificationme(response.message);
                                }
                            }
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                }
            })
        }

function submitforapprovalprofile(Id) {
            Swal.fire({
                title: "Are you sure?",
                text: 'You Want to Approve this CI/CIG',
                type: "success",
                showCancelButton: !0, confirmButtonColor: "#34c38f",
                cancelButtonColor: "#f46a6a",
                confirmButtonText: "Yes, Approve it!"
            }).then(function (t) {
                if (t.value == true) {
                    $.ajax({
                        type: "POST",
                        url: "/CICIG/CIApprovalRequest",
                        data: { id: Id, val: 1 },
                        dataType: "json",
                        success: function (response) {
                            if (response != null) {
                                if (response.isValid) {
                                    Swal.fire("Back", response.message, "success");
                                    $('#btnverifyprofile').prop('disabled', true);
                                    $('#btnrejectprofile').prop('disabled', true);                                                                   
                                } else {
                                    notificationme(response.message);
                                }
                            }
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                }
            })
        }
function rejectforapprovalprofile(Id) {
    var Description = "";
            Swal.fire({
                title: "Are you sure?",                
                html: "<h6>You Want to Reject CI/CIG?</h6><div class='text-center'><label>Description</label><div class='text-center'><textarea id='description' class='form-control' rows='2'></textarea></div>",
                type: "warning",
                showCancelButton: !0, confirmButtonColor: "#34c38f",
                cancelButtonColor: "#f46a6a",
                confirmButtonText: "Yes, Reject it!",
                preConfirm: () => {
                    Description = document.getElementById('description').value;
                    if (Description == "") {
                        Swal.showValidationMessage(
                            `Invalid Reason!`
                        )
                    }
                }
            }).then(function (t) {
                if (t.value == true) {
                    $.ajax({
                        type: "POST",
                        url: "/CICIG/CIRejectdRequest",
                        data: { id: Id, val: 0, description : Description},
                        dataType: "json",
                        success: function (response) {
                            if (response != null) {
                                if (response.isValid) {
                                    Swal.fire("Rejected", response.message, "success");
                                    $('#btnverifyprofile').prop('disabled', true);
                                    $('#btnrejectprofile').prop('disabled', true);                                                                      
                                } else {
                                    notificationme(response.message);
                                }
                            }
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });
                }
            })
        }

function notificationme(message) {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "100",
                "positionClass": "toast-bottom-right",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "show",
                "hideMethod": "hide"
            };
            toastr.info(message);
        }
function createModal(url) {
    $("#pdfFile").attr("src", url);
}
</script>
}