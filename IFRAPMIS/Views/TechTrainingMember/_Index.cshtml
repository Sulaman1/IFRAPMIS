@model IEnumerable<DAL.Models.Domain.TechTrainingnamespace.TechTrainingMember>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using PermissionPro.PreDefined
@* @using Constant.Constants *@
@{
    if(Model.Count() > 0){
        <div style="margin:5px">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            S.No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryTrainingCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.Age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.BeneficiaryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.BeneficiaryFather)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.CNIC)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.Mobile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BeneficiaryVerified.ProfilePicture)
                        </th>
                        @if (true)//AuthorizationService.AuthorizeAsync(User, Permissions.CICIGTraining.Edit).Result.Succeeded
                        {
                            <th>Action</th>
                            <th>Action</th>
                        }                        
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(counter = counter + 1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryTrainingCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryVerified.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryVerified.BeneficiaryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryVerified.BeneficiaryFather)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryVerified.CNIC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BeneficiaryVerified.Mobile)
                            </td>
                            <td>
                                @if (item.BeneficiaryVerified.ProfilePicture != null)
                                {
                                    <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(item.BeneficiaryVerified.ProfilePicture))">
                                }
                                else
                                {
                                    <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="/assets/images/blep-v2.png">
                                }
                            </td>
                            @if (true)//AuthorizationService.AuthorizeAsync(User, Permissions.CICIGTraining.Edit).Result.Succeeded)
                            {
                                <td>
                                    <a class="text-danger ml-1" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" asp-action="Edit" asp-route-id="@item.TechTrainingMemberId"> <i class="mdi mdi-pencil font-size-18"></i></a>                                    
                                </td>
                                <td>
                                    <a class="text-danger ml-1" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" asp-action="Delete" asp-route-id="@item.TechTrainingMemberId"> <i class="mdi mdi-trash-can font-size-18"></i></a>
                                </td>
                            }                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
